{
    "name": "apika",
    "version": "1.0.0",
    "main": "dist/bundle.js",
    "type": "module",
    "private": true,
    "scripts": {
        "prod:dev": "NODE_ENV=production yarn dev",
        "production": "yarn prod",
        "prod": "NODE_ENV=production yarn build",
        "build": "NODE_MODE=build ./node_modules/.bin/rollup -c",
        "fe": "NODE_MODE=development ./node_modules/.bin/rollup -c --watch",
        "be": "cd server && NODE_ENV=development yarn start",
        "dev": "concurrently --kill-others-on-fail --prefix \"[{name}]\" --names \",BE\" --prefix-colors \"blue,green\" \"yarn fe\" \"yarn be\"",
        "test": "jest",
        "prepublish": "tsc",
        "ts": "yarn tsc --noEmit",
        "be:build": "cd server && yarn build",
        "be:install": "cd server && yarn install",
        "serve": "yarn build && cd server && NODE_ENV=production yarn start",
        "docker:down": "docker-compose down -v",
        "docker:local:build": "docker-compose --profile dev build --no-cache",
        "docker:local:up": "docker-compose --profile dev up",
        "docker:prod:build": "docker-compose build --no-cache",
        "docker:prod:up": "NODE_ENV=production docker-compose --profile production up --build backend"
    },
    "dependencies": {
        "jotai": "^2.12.2",
        "lucide-react": "^0.483.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.4.0",
        "tailwind-merge": "^3.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-typescript": "^7.26.0",
        "@rollup/plugin-commonjs": "^28.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.3.0",
        "@rollup/plugin-typescript": "^11.1.6",
        "@swc/core": "^1.7.39",
        "@swc/jest": "^0.2.36",
        "@tailwindcss/postcss": "^4.0.15",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@types/jest": "^29.5.12",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "babel-jest": "^29.7.0",
        "concurrently": "^9.1.2",
        "connect-livereload": "^0.6.1",
        "cors": "^2.8.5",
        "cssnano": "^7.0.6",
        "dotenv": "^16.4.5",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.0.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-environment-node": "^29.7.0",
        "jquery": "^3.6.0",
        "livereload": "^0.9.3",
        "postcss": "^8.4.47",
        "rollup": "^2.0.0",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-delete": "^2.1.0",
        "rollup-plugin-dotenv": "^0.5.1",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-sass": "^1.13.2",
        "rollup-plugin-serve": "^1.1.1",
        "rollup-plugin-terser": "^7.0.0",
        "sass": "^1.80.3",
        "source-map-explorer": "^2.5.3",
        "tailwindcss": "^4.0.16",
        "tslib": "^2.6.2",
        "typescript": "^5.5.4"
    },
    "engines": {
        "yarn": ">= 1.0.0",
        "npm": "please-use-yarn"
    },
    "packageManager": "yarn@1.0.0"
}
